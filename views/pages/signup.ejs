<!-- views/signup.ejs -->
<!doctype html>
<html>
<head>
  <% include ../partials/header.ejs %>
</head>
<body>
<div class="container">

<div class="col-sm-6 col-sm-offset-3">

  <div class="alert text-center" role="alert">
    <div class="page-header text-center">
      <h1><span class="fa fa-anchor"></span> Sign up</h1>
    </div>
  </div>

    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/signup" method="post">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email" placeholder="example@whisky.com">
        </div>
        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" name="names" placeholder="name">
        </div>

        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password" value="dingen" >
        </div>

        <p align="center"> <button class="button2 btn btn-lg btn-primary" type="signup">Sign up</button> </p>
    </form>

    <hr>

    <h5>Already have an account?  <a class="button3 btn btn-lg btn-primary" href="/login" type="login">Log in</a> </h5>
</div>

</div>
</body>
</html>
