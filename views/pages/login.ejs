<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
</head>
<body>
<div class="container">
<div class="login">
<div class="col-sm-6 col-sm-offset-3">

  <div class="alert text-center" role="alert">
    <div class="page-header text-center">
      <h1><span class="fa fa-anchor"></span> Log in</h1>
    </div>
  </div>
    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/login" method="post">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
        </div>

        <p align="center"> <button class="button2 btn btn-lg btn-primary" type="login">login</button> </p>
    </form>

    <hr>

    <h5>Need an account?  <a class="button3 btn btn-lg btn-primary" href="/signup" type="signup">Sign up</a> </h5>
</div>
</div>
</div>
</body>
</html>
